<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context="com.josh.gomez.projectmessi.module.credits.CreditActivity">


    <!--wallpaper container-->
    <FrameLayout
        android:id="@+id/wallpaper"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/wall2"
        android:longClickable="true"
        android:orientation="horizontal"
        android:scaleType="centerCrop" >

        <ImageView
            android:layout_margin="15dp"
            android:id="@+id/imageView6"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/arrow_left" />
    </FrameLayout>


    <!--profile image-->
    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="250dp"
        android:longClickable="true"
        android:src="@drawable/simpson"
        app:border_color="@color/white"
        app:border_width="3dp" />

    <!--content-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:alpha="0.8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joshua Gomez"
            android:textColor="@color/Offwhite"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:alpha="0.3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="created with"
                android:textAlignment="center"
                android:textColor="@color/Offwhite" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@mipmap/heart" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="in android studio"
                android:textAlignment="center"
                android:textColor="@color/Offwhite" />

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
